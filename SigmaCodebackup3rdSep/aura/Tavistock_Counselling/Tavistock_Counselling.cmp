                <lightning:input label="Postal Code" required="true"/>
                <lightning:input label="Phone" required="true"/>
                <lightning:input label="Email" required="true"/>
                <lightning:input label="Job Title" required="true"/>
                <lightning:input label="Current Employer" required="true"/>
